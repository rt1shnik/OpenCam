					android:layout_width="0dip"
					android:layout_weight="1"
			   		android:layout_gravity="center"
			   		android:layout_margin="7dip"
			   		android:onClick="onButtonClick"/>									
	</LinearLayout>
	
	<RelativeLayout android:id="@+id/qcLayout"
        		android:background="@drawable/blacktransparentlayerpulldownmenu"
        		android:orientation="vertical"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"	    		
	    		android:gravity="top"
	    		android:layout_below="@+id/paramsLayout"
	    		android:paddingTop="30dp"
	    		android:paddingBottom="30dp"
	    		android:paddingLeft="15dp"
	    		android:paddingRight="15dp"
				android:visibility="gone">
					<GridView
					    android:id="@+id/qcGrid"
					    android:layout_width="match_parent" 
					    android:layout_height="wrap_content"
					    android:numColumns="5"
					    android:horizontalSpacing="0dp"
					    android:verticalSpacing="30dp"					    
					    android:stretchMode="columnWidth"
					    android:gravity="top"/>					
	</RelativeLayout>	
	 
	<com.almalence.ui.RotateImageView 
	    android:id="@+id/Unlock"
		android:background="@android:color/transparent"
		android:src="@drawable/unlock"					
		android:layout_height="40dip"
		android:layout_width="40dip"
		android:layout_marginTop="230dip"
   		android:layout_gravity="top|left"
   		android:visibility="gone"/>	

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/viewPagerLayoutMain"
        android:background="@drawable/store_background"
        android:visibility="gone"
		>
		<ImageView
			android:id="@+id/storeHeader"
			android:src="@drawable/store_header"
			android:background="@android:color/transparent"
			android:layout_height="@dimen/headerStoreImageSize"
			android:layout_width="match_parent"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
	   		>
		</ImageView>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/viewPagerLayout"
	        android:background="@drawable/store_background"
	        android:layout_below="@+id/storeHeader"
			>
	 	</RelativeLayout>
	</RelativeLayout>
	 
	<RelativeLayout
		android:id="@+id/buttonsLayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"	 
		android:layout_marginTop="@dimen/buttonsLayoutMarginTop"
		android:layout_below="@+id/topPanel">
			<LinearLayout
		 	 	android:id="@+id/evLayout"
		 	 	android:background="@drawable/ev_background"		 	 	    	 	 	    
		 	 	android:orientation="horizontal"
		 	 	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_marginLeft="3dip"	    		
	    		android:paddingTop="10dip"
	    		android:paddingLeft="10dip"
	    		android:paddingRight="10dip"
	    		android:visibility="gone">
	    		<ImageButton
	    		    	android:id="@+id/evMinusButton"
				        android:layout_height="@dimen/exposureButtonSize"				        
				        android:layout_width="@dimen/exposureButtonSize"
				        android:scaleType="fitCenter"
				        android:layout_marginRight="5dip"
				        android:src="@drawable/button_evminus"				        
				        android:background="@android:color/transparent"				        
				        android:onClick="onButtonClick"				        
				    	/>
	    		<LinearLayout
		 	 	android:id="@+id/seekbarLayout"		 	 	    	 	 	    
		 	 	android:orientation="vertical"
		 	 	android:layout_width="@dimen/exposureSeekBarWidth"
	    		android:layout_height="wrap_content">
		    		<SeekBar android:id="@+id/evSeekBar"
							 android:layout_width="@dimen/exposureSeekBarWidth"
							 android:layout_height="wrap_content"
							 android:orientation="horizontal"
							 android:progressDrawable="@drawable/ev_bar"/>
		    		<LinearLayout
			 	 	android:id="@+id/seekbartextLayout"		 	 	    	 	 	    
			 	 	android:orientation="horizontal"
			 	 	android:layout_width="@dimen/exposureSeekBarWidth"
		    		android:layout_height="wrap_content">
		    		<TextView android:id="@+id/seekBarLeftText"
		    		    	  android:layout_width="@dimen/exposureTitleWidth"
		    		    	  android:layout_height="wrap_content"		    		    	  
							  android:textSize="@dimen/exposureTitleSize"
							  android:paddingLeft="10dp"							  
							  android:textStyle="bold"							  
							  android:gravity="left"/>
		    		<TextView android:id="@+id/seekBarCenterText"
		    		    	  android:layout_width="@dimen/exposureCenterTitleWidth"
		    		    	  android:layout_height="wrap_content"
		    		    	  android:text="@string/ev_zero"
							  android:textSize="@dimen/exposureTitleSize"							  
							  android:textStyle="bold"
							  android:gravity="center"/>
		    		<TextView android:id="@+id/seekBarRightText"
		    		    	  android:layout_width="@dimen/exposureTitleWidth"
		    		    	  android:layout_height="wrap_content"		    		          
							  android:textSize="@dimen/exposureTitleSize"
							  android:paddingRight="10dp"							  
							  android:textStyle="bold"
							  android:gravity="right"/>
		    		</LinearLayout>
	    		</LinearLayout>
	    		<ImageButton
	    		    	android:id="@+id/evPlusButton"
				        android:layout_height="@dimen/exposureButtonSize"				        
				        android:layout_width="@dimen/exposureButtonSize"
				        android:scaleType="fitCenter"
				        android:layout_marginLeft="5dip"
				        android:src="@drawable/button_evplus"				        
				        android:background="@android:color/transparent"				        
				        android:onClick="onButtonClick"				        
				    	/>
	    	</LinearLayout>
	    	<RelativeLayout android:id="@+id/scenemodeLayout"
        		android:background="@drawable/blacktransparentlayersettings"
        		android:orientation="vertical"
        		android:layout_width="@dimen/modeLayoutWidth"
        		android:layout_height="wrap_content"
				android:padding="15dp"					    		
	    		android:layout_gravity="top"
				android:visibility="gone">
					<GridView  
					    android:id="@+id/scenemodeGrid"
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content"
					    android:numColumns="4"
					    android:verticalSpacing="5dp"
					    android:stretchMode="columnWidth"
					    android:gravity="center"					    
					/>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/wbLayout"
        		android:background="@drawable/blacktransparentlayersettings"
        		android:orientation="vertical"
        		android:layout_width="@dimen/modeLayoutWidth"
        		android:layout_height="wrap_content"        		
        		android:padding="15dp"
	    		android:layout_gravity="top"
				android:visibility="gone">
					<GridView  
					    android:id="@+id/wbGrid"
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content"
					    android:numColumns="4"
					    android:verticalSpacing="5dp"
					    android:stretchMode="columnWidth"
					    android:gravity="center"					    
					/>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/focusmodeLayout"
        		android:background="@drawable/blacktransparentlayersettings"
        		android:orientation="vertical"
        		android:layout_width="@dimen/modeLayoutWidth"
        		android:layout_height="wrap_content"        		
        		android:padding="15dp"
	    		android:layout_gravity="top"
				android:visibility="gone">
					<GridView  
					    android:id="@+id/focusmodeGrid"
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content"
					    android:numColumns="4"
					    android:verticalSpacing="5dp"
					    android:stretchMode="columnWidth"
					    android:gravity="center"					    
					/>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/flashmodeLayout"
        		android:background="@drawable/blacktransparentlayersettings"
        		android:orientation="vertical"
        		android:layout_width="@dimen/modeLayoutWidth"
        		android:layout_height="wrap_content"        		
        		android:padding="15dp"
	    		android:layout_gravity="top"
				android:visibility="gone">
					<GridView  
					    android:id="@+id/flashmodeGrid"
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content"
					    android:numColumns="4"
					    android:verticalSpacing="5dp"
					    android:stretchMode="columnWidth"
					    android:gravity="center"					    
					/>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/isoLayout"
        		android:background="@drawable/blacktransparentlayersettings"
        		android:orientation="vertical"
        		android:layout_width="@dimen/modeLayoutWidth"
        		android:layout_height="wrap_content"        		
        		android:padding="15dp"
	    		android:layout_gravity="top"
				android:visibility="gone">
					<GridView  
					    android:id="@+id/isoGrid"
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content"
					    android:numColumns="4"
					    android:verticalSpacing="5dp"
					    android:stretchMode="columnWidth"
					    android:gravity="center"					    
					/>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/meteringLayout"
        		android:background="@drawable/blacktransparentlayersettings"
        		android:orientation="vertical"
        		android:layout_width="@dimen/modeLayoutWidth"
        		android:layout_height="wrap_content"        		
        		android:padding="15dp"
	    		android:layout_gravity="top"
				android:visibility="gone">
					<GridView  
					    android:id="@+id/meteringmodeGrid"
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content"
					    android:numColumns="4"
					    android:verticalSpacing="5dp"
					    android:stretchMode="columnWidth"
					    android:gravity="center"					    
					/>
			</RelativeLayout>				
	</RelativeLayout>	 	
		
	   <LinearLayout
 	    android:id="@+id/vfLayout"
 	    android:visibility="gone"
 	    android:orientation="vertical"
 	    android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_gravity="bottom|right"
  		android:layout_above="@+id/mainButtons">					 		
		</LinearLayout>

	 	
		<RelativeLayout android:id="@+id/modeLayout"
        		android:background="@drawable/blacktransparentlayerpulldownmenu"
        		android:orientation="vertical"
        		android:layout_width="@dimen/modeLayoutWidth"
        		android:layout_height="wrap_content"        		
	    		android:layout_gravity="bottom"
	    		android:layout_alignParentRight="true"
	    		android:layout_marginRight="5dp"
	    		android:padding="10dp"
