	<LinearLayout
		android:id="@+id/hintLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"    
		android:background="@drawable/almalence_gui_hint_background"   
		android:visibility="gone">
		
	    <RelativeLayout android:id="@+id/hint_top"
            android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="@dimen/mainButtonHeight">
            <ImageView
				android:id="@+id/arrowdown"
				android:src="@drawable/gui_almalence_hint_arrowpull"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_alignParentTop="true"
				android:layout_marginTop="@dimen/paramsLayoutHeight"
		   		android:onClick="onButtonClick">
			</ImageView>
			
            <TextView
				android:id="@+id/textDown"
				android:text="@string/layout_hint_top_center"
				android:textSize="18sp"
				android:textColor="#00B6E8"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_below="@+id/arrowdown"
				android:layout_marginLeft="10dp"
				android:layout_centerHorizontal="true"
		   		android:onClick="onButtonClick">
			</TextView>
            
            
            <ImageView
				android:id="@+id/arrowup"
				android:src="@drawable/gui_almalence_hint_arrowup"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="@dimen/hintUpArrowTop"
				android:layout_alignParentTop="true"
				android:layout_marginTop="@dimen/hintUpArrowTop"
		   		android:onClick="onButtonClick">
			</ImageView>
			
            <TextView
				android:id="@+id/textTop"
				android:text="@string/layout_hint_top_left"
				android:textSize="18sp"
				android:textColor="#00B6E8"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_below="@+id/arrowup"
				android:layout_marginLeft="@dimen/hintUpArrowText"
		   		android:onClick="onButtonClick">
			</TextView>
            
		</RelativeLayout>
	    
	    <RelativeLayout android:id="@+id/hint_center"
            android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/mainButtonHeight"
			android:layout_gravity="center_vertical|center_horizontal"
			android:layout_margin="20dp"
			>
            <ImageView
				android:id="@+id/arrowToLeft"
				android:src="@drawable/gui_almalence_hint_arrowtoleft"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_above="@+id/textCenter"
		   		android:onClick="onButtonClick">
			</ImageView>
			
            <TextView
				android:id="@+id/textCenter"
				android:text="@string/layout_hint_center"
				android:textSize="18sp"
				android:textColor="#00B6E8"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_centerInParent="true"
		   		android:onClick="onButtonClick">
			</TextView>
			
            <ImageView
				android:id="@+id/arrowToRight"
				android:src="@drawable/gui_almalence_hint_arrowtoright"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_below="@+id/textCenter"
		   		android:onClick="onButtonClick">
			</ImageView>
            
		</RelativeLayout>
	    
        <RelativeLayout android:id="@+id/hint_bottom"
            android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="@dimen/mainButtonHeight"
			>
            
            <ImageView
				android:id="@+id/arrowDown"
				android:src="@drawable/gui_almalence_hint_arrowdown"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="@dimen/hintDownArrowBottom"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="50dp"
		   		android:onClick="onButtonClick">
			</ImageView>
			
            <TextView
				android:id="@+id/textDownHintBottom"
				android:text="@string/layout_hint_bottom"
				android:textSize="18sp"
				android:textColor="#00B6E8"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_toLeftOf="@+id/arrowDown"
				android:layout_alignBottom="@+id/arrowDown"
				android:layout_marginBottom="@dimen/hintDownArrowText"
				android:layout_marginRight="5dp"
		   		android:onClick="onButtonClick">
			</TextView>
			
		</RelativeLayout>
			
	</LinearLayout>
		
	<RelativeLayout android:id="@+id/mode_help"
			android:layout_width="fill_parent"
			android:layout_height="700dip"
			android:layout_margin="20dip"
			android:background="#FAFAFA"
			android:visibility="gone"
			android:layout_centerInParent="true"
			>
            
	    	<TextView
				android:id="@+id/helpTextModeName"
				android:textSize="17sp"
				android:textColor="#5A5E5E"
				android:background="@android:color/transparent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:layout_margin="5dip"
				>
			</TextView>
			
		    <LinearLayout
			android:id="@+id/helpImageLayout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/helpImage"
			android:layout_margin="5dip"
			android:orientation="vertical"       
			android:layout_below="@+id/helpTextModeName"
			>
	            <ImageView
					android:id="@+id/helpImage"
					android:layout_height="fill_parent"
					android:layout_width="fill_parent"
					>
				</ImageView>
			</LinearLayout>
			
		    <ScrollView 
		    android:id="@+id/helpScroll"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/helpImageLayout"
		    android:layout_marginBottom="5dip"
		    android:layout_above="@+id/helpTextLayout"
		    >
	            <TextView
					android:id="@+id/helpText"
					android:textSize="17sp"
					android:textColor="#5A5E5E"
					android:background="@android:color/transparent"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_margin="5dip"
					>
				</TextView>

   			</ScrollView>
   			
		    <RelativeLayout
				android:id="@+id/helpTextLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="2dip"
				android:orientation="horizontal"       
				android:layout_centerHorizontal="true"
				android:layout_alignParentBottom="true"
				android:paddingBottom="5dip"
				android:paddingTop="5dip"
				>
		            <LinearLayout
					android:id="@+id/helpButtonsLayout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_margin="2dip"
					android:orientation="horizontal"       
					>
			            <Button 
			                android:id="@+id/buttonOk"
			                android:layout_height="wrap_content"
							android:layout_width="fill_parent"
			                android:textSize="17sp"
			                android:text="@string/okText"
			                android:textColor="#FFFFFF"
			                android:layout_margin="5dip"
			                android:layout_weight="1"
			                >
			            </Button>
			            
			            <Button 
			                android:id="@+id/buttonDontShow"
			                android:layout_height="wrap_content"
							android:layout_width="fill_parent"
			                android:textSize="17sp"
			                android:text="@string/helpTextDontShow"
			                android:textColor="#FFFFFF"
			                android:layout_margin="5dip"
			                android:layout_weight="1"
			                >
			            </Button>
			        </LinearLayout>
	            </RelativeLayout>
			
	</RelativeLayout>
	
</RelativeLayout>
