		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/paramsLayoutHeight"
		android:background="@drawable/blacktransparentlayertop"	    
		android:layout_gravity="top"		
		android:layout_alignParentTop="true">
		 	<com.almalence.ui.RotateImageView android:id="@+id/evButton"
					android:background="@android:color/transparent"
					android:layout_height="fill_parent"
					android:layout_width="0dip"
					android:layout_weight="1"
			   		android:layout_gravity="center"
			   		android:layout_margin="7dip"
			   		android:onClick="onButtonClick"/>
		 	<com.almalence.ui.RotateImageView android:id="@+id/sceneButton"
					android:background="@android:color/transparent"					
					android:layout_height="fill_parent"
					android:layout_width="0dip"
					android:layout_weight="1"
			   		android:layout_gravity="center"
			   		android:layout_margin="7dip"
			   		android:onClick="onButtonClick"/>		 	
			<com.almalence.ui.RotateImageView android:id="@+id/wbButton"
					android:background="@android:color/transparent"					
